# 資料庫設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ENLSMS
DB_USER=postgres
DB_PASSWORD=your_password

# FastAPI設定
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# SMS Gateway設定
SMS_GATEWAY_URL=http://123.123.123.123:4321/mpsiweb/smssubmit
SMS_SYS_ID=ENT001
SMS_SRC_ADDRESS=01234500000000001234
SMS_DR_FLAG=true
SMS_FIRST_FAIL_FLAG=false

# AI服務設定
# 選擇 AI 提供者: "gemini" 或 "openai"
AI_PROVIDER=gemini

# Gemini API設定
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=http://123.123.123.123/v1
OPENAI_MODEL=gpt-4o-mini

# 日誌設定
LOG_LEVEL=INFO
LOG_FILE=logs/sms_system.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 排程設定
SCHEDULE_INTERVAL=60